# Variables globales partagées entre tous les environnements
# Copier ce fichier vers .env.global et modifier les valeurs

# Réseau Docker partagé
NETWORK_NAME=app_network

# Chemins de données persistantes
DATA_PATH=/var/docker-data

# Let's Encrypt
LETSENCRYPT_EMAIL=contact@maximemarc.com

# Politique de redémarrage
RESTART_POLICY=always

# Timezone
TZ=Europe/Paris

# Logging
LOG_DRIVER=loki
LOKI_URL=http://loki:3100/loki/api/v1/push

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password

# Backup
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/docker-data/backups
